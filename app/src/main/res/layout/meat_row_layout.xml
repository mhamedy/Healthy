<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/meat_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        app:cardBackgroundColor="#FF0000"
        app:cardCornerRadius="50dp"
        android:layout_gravity="center"
        app:cardElevation="10dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:id="@+id/image_meat"
                android:scaleType="center"
                android:src="@drawable/bell_peppers" />

            <TextView
                android:id="@+id/name_meat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                tools:text="Chicken Breast"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_calorie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                tools:text="Calories: 165 calories"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/protein_meat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                tools:text="Protein: 31g"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/info_meat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="25dp"
                android:layout_marginRight="5dp"
                tools:text="The tomato is the edible berry. The tomato is the edible berry."
                android:textColor="@color/white"
                android:textSize="16sp" />




        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>