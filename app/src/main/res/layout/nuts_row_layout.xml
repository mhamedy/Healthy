<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/nuts_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:cardBackgroundColor="#523A28"
        app:cardCornerRadius="20dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_nuts"
                android:layout_width="360dp"
                android:layout_height="360dp"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                tools:src="@drawable/logo" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/name_nuts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    tools:text="Almonds"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:layout_gravity="center"
                    android:textStyle="bold|italic" />
                <TextView
                    android:id="@+id/info_nuts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="2dp"
                    tools:text="The tomato is the edible berry of the plant Solanum lycopersicum"
                    android:textColor="@color/white"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/name_fat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="2dp"
                    tools:text="Calories"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:layout_gravity="left"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/name_protein"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="2dp"
                    tools:text="Calories"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:layout_gravity="left"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/name_carbs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:text="Calories" />
                <TextView
                    android:id="@+id/name_fiber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="2dp"
                    tools:text="Calories"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:layout_gravity="left"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/name_vitamin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="2dp"
                    tools:text="Calories"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:layout_gravity="left"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/name_magnesium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="2dp"
                    tools:text="Calories"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:layout_gravity="left"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/name_manganese"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="2dp"
                    tools:text="Calories"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:layout_gravity="left"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/name_calories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="2dp"
                    tools:text="Calories"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:layout_gravity="left"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/info2_nuts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="2dp"
                    tools:text="The tomato is the edible berry of the plant Solanum lycopersicum"
                    android:textColor="@color/white"
                    android:textSize="16sp"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>